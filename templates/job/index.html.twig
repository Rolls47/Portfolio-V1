{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    <div class="centernav">
    <h1>Job's</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Poste</th>
                <th>Type de job</th>
                <th>Compagnie</th>
                <th>Ville</th>
                <th>Description</th>
                <th>Logo</th>
                <th>DÃ©but</th>
                <th>Fin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.poste }}</td>
                <td>{{ job.typeJob }}</td>
                <td>{{ job.company }}</td>
                <td>{{ job.city }}</td>
                <td>{{ job.description }}</td>
                <td>{{ job.logo }}</td>
                <td>{{ job.startDate ? job.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ job.endDate ? job.endDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('job_show', {'id': job.id}) }}">Voir</a>
                    <a href="{{ path('job_edit', {'id': job.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Pas de Job</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_new') }}">Nouveau Job</a>
{% endblock %}
