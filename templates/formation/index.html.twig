{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <div class="centernav">
    <h1>Formation</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>École</th>
                <th>Diplôme</th>
                <th>Domaine</th>
                <th>Début</th>
                <th>Fin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.school }}</td>
                <td>{{ formation.degree }}</td>
                <td>{{ formation.fieldOfStudy }}</td>
                <td>{{ formation.yearOfStart }}</td>
                <td>{{ formation.yearOfEnd }}</td>
                <td>
                    <a href="{{ path('formation_show', {'id': formation.id}) }}">Voir</a>
                    <a href="{{ path('formation_edit', {'id': formation.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Pas de Formation</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('formation_new') }}">Nouvelle Formation</a>
{% endblock %}
