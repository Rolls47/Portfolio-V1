<div class="shadow pb-5 mt-5">
    <div class="row">
        <div class="col-12">
            <h1 class="pt-5 mt-5 mb-5 d-flex justify-content-center">Mes exp√©riences professionnelles</h1>
        </div>
    </div>
    <div class="row d-flex justify-content-around mt-5 mb-5">
        {% for job in jobs %}
            <div class="card col-10 col-lg-5 col-xl-5 col-sm-10 mb-5 p-0">
                <div class="card-body ">
                    <h5 class="card-title">{{ job.poste }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ job.company }} - {{ job.typejob }}</h6>
                    <img src="{{ job.logo }}" alt="logo" class="job-logo">
                    <h6 class="card-subtitle mb-2 text-muted"></h6>
                    <p class="card-text">{{ job.description }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
