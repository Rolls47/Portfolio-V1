<div class="pb-5 mb-5">
    <div>
        <h1 class="pt-5 mt-5 mb-5 d-flex justify-content-center">Mes Formations</h1>
    </div>
    <div class="d-flex justify-content-around mt-5 mb-5">
        {% for formation in formations %}
            <div class="card d-flex justify-content-around">
                <div class="card-body">
                    <h5 class="card-title">{{ formation.school }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ formation.degree }}</h6>
                    <h6 class="card-subtitle mb-2 text-muted">{{ formation.fieldofstudy }}</h6>
                    <h6 class="card-subtitle mb-2 text-muted">{{ formation.yearOfStart }} - {{ formation.yearOfEnd }}</h6>
                    <img src="{{ formation.logo }}" alt="logo" class="formation-logo">

                </div>
            </div>
        {% endfor %}
    </div>
</div>
