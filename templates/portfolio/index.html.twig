{% extends 'base.html.twig' %}

{% block title %}Portfolio index{% endblock %}

{% block body %}
    <div class="centernav">
        <h1>Portfolio's</h1>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Techno</th>
            <th>Image</th>
            <th>Lien</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for portfolio in portfolios %}
            <tr>
                <td>{{ portfolio.id }}</td>
                <td>{{ portfolio.name }}</td>
                <td>{{ portfolio.description }}</td>
                <td>{{ portfolio.technology }}</td>
                <td><img class="formation-logo" src="{{ portfolio.image }}" alt="logo-skill"></td>
                <td>{{ portfolio.lien }}</td>
                <td>
                    <a href="{{ path('portfolio_show', {'id': portfolio.id}) }}">voir</a>
                    <a href="{{ path('portfolio_edit', {'id': portfolio.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Pas de site</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('portfolio_new') }}">Nouveau site</a>
{% endblock %}
